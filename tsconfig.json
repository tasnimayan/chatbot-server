{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true, // set true for strict type
    "strictNullChecks": false, //
    "strictFunctionTypes": true
  },
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["node_modules", "dist"]
}
